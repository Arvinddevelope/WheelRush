<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Main Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earn Coins"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="4dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose any option below to earn rewards"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp" />

        <!-- Watch Ad Button -->
        <Button
            android:id="@+id/watchAdBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Watch Ad (Earn 10 Coins)"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Complete Offers Button -->
        <Button
            android:id="@+id/completeOfferBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Complete Offers"
            android:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Refer & Earn Button -->
        <Button
            android:id="@+id/referFriendBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Refer  Earn"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>
