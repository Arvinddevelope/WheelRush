<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="16dp">

    <TextView
        android:id="@+id/spinTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spin the Wheel"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <ImageView
        android:id="@+id/spinWheelImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_spin"
        android:contentDescription="Spin Wheel" />

    <Button
        android:id="@+id/spinButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="SPIN NOW"
        android:textStyle="bold"
        android:layout_below="@id/spinWheelImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white" />
</RelativeLayout>
